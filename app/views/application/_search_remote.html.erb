<div class="col-sm-3 col-md-3 pull-right">
  <%= form_tag({controller: "asignaturas", action:"edit"}, method: "get", remote: true) do %>
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Buscar..." value="<%= params[:busqueda] %>" name="busqueda">
      <div class="input-group-btn">
        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
      </div>
    </div>
  <% end %>
</div>