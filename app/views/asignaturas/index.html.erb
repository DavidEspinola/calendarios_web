<h1>Listado de clases</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Recursos</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clases.each do |clase| %>
      <tr>
        <td><%= clase.nombre %></td>
        <td><%= clase.descripcion %></td>
        <td><%= clase.recursos %></td>
        <td><%= clase.tags_id %></td>
        <td><%= link_to 'Show', clase %></td>
        <td><%= link_to 'Edit', edit_clase_path(clase) %></td>
        <td><%= link_to 'Destroy', clase, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Clase', new_clase_path %>