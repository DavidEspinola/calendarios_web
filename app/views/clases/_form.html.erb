<%= form_for(@clase) do |f| %>
  <% if @clase.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@clase.errors.count, "error") %> han impedido que esta clase se guarde:</h2>

      <ul>
      <% @clase.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field input-group">
    <%= f.label :nombre, class: "input-group-addon" %>
    <%= f.text_field :nombre, class: "form-control" %>
  </div>
  <div class="field input-group">
    <%= f.label :descripcion, class: "input-group-addon" %>
    <%= f.text_area :descripcion, class: "form-control" %>
  </div>
  <div class="field input-group">
    <%= f.label :recursos, class: "input-group-addon" %>
    <%= f.text_field :recursos, class: "form-control" %>
  </div>
  <div class="actions btn-group">
    <%= f.submit "Aceptar", class: "btn btn-primary" %>
    <%= link_to 'Inicio', clases_path, class: "btn btn-default" %>
  </div>
<% end %>
